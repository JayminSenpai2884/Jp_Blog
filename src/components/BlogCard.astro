---

interface Props {
  title: string;
  summary: string;
  image: string;
  url: string;
  size?: 'small' | 'medium' | 'large';
}

const { title, summary, image, url, size = 'large' } = Astro.props;
---

<article class="group h-full bg-white/5 backdrop-blur-lg rounded-xl border border-white/10 overflow-hidden transform hover:-translate-y-1 transition-all duration-300" style="height: 400px;">
  <button onclick={`window.openPreviewModal('${url}')`} class="block h-full relative w-full text-left">
    <div class="absolute inset-0">
      <div class="absolute inset-0 bg-gradient-to-t from-black/80 via-black/50 to-transparent opacity-60 group-hover:opacity-80 transition-opacity"></div>
      <img src={image} alt={title} class="w-full h-full object-cover" style="object-fit: cover;" />
    </div>
    <div class="relative h-full p-6 flex flex-col justify-end">
      <h2 class="text-xl font-montserrat font-bold mb-2 text-white group-hover:text-primary transition-colors [text-shadow:_0_2px_10px_rgba(0,0,0,0.5)]">
        {title}
      </h2>
      <p class="text-gray-300 text-sm line-clamp-2 group-hover:text-white/90 transition-colors">
        {summary}
      </p>
    </div>
  </button>
</article>