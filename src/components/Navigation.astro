---
import { Laptop } from "lucide-astro";
---

<nav class="fixed top-4 left-1/2 -translate-x-1/2 z-50">
  <div
    class="group px-2 py-2 bg-black/20 backdrop-blur-lg rounded-full border border-white/10 shadow-lg hover:bg-black/30 hover:border-primary/30 transition-all duration-500 hover:shadow-2xl hover:shadow-primary/20"
  >
    <div class="flex items-center gap-2">
      <a
        href="/"
        class="px-4 py-2 text-lg font-montserrat font-bold text-white/90 hover:text-white transition-colors group-hover:text-primary"
        >JP</a
      >
      <div
        class="h-4 w-[1px] bg-white/20 group-hover:bg-primary/30 transition-colors"
      >
      </div>
      <div class="flex items-center gap-1">
        <a href="/" class="nav-link">Home</a>
        <a href="/about" class="nav-link">About</a>
      </div>
      <div
        class="h-4 w-[1px] bg-white/20 group-hover:bg-primary/30 transition-colors"
      >
      </div>
      <button
        id="theme-toggle"
        class="p-2 rounded-full hover:bg-white/10 transition-all duration-300 group-hover:rotate-6"
      >
        <div class="relative">
          <a href="https://www.jaymincodes.info/" target="_blank">
            <Laptop
              class="w-4 h-4 text-white/90 group-hover:text-primary transition-all duration-300"
            />
          </a>
          <div
            class="absolute -top-1 -right-1 w-2 h-2 bg-primary rounded-full opacity-0 group-hover:opacity-100 animate-pulse"
          >
          </div>
        </div>
      </button>
    </div>
  </div>
</nav>

<style>
  .nav-link {
    @apply px-4 py-2 rounded-full font-montserrat text-white/75 hover:text-primary hover:bg-white/10 transition-all duration-300;
  }

  .nav-link:hover {
    text-shadow: 0 0 20px rgba(52, 152, 219, 0.5);
  }

  @keyframes float {
    0%,
    100% {
      transform: translateY(0);
    }
    50% {
      transform: translateY(-2px);
    }
  }

  #theme-toggle:hover {
    animation: float 2s ease-in-out infinite;
  }
</style>

<script>
  const themeToggle = document.getElementById("theme-toggle");
  let isDark = true;

  themeToggle?.addEventListener("click", () => {
    isDark = !isDark;
    document.documentElement.classList.toggle("light-theme");
  });
</script>
